<odoo>
    <record id="view_academy_enrollment_list" model="ir.ui.view">
        <field name="name">academy.enrollment.list</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_name"/>
                <field name="course_name"/>
                <field name="enrollment_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_academy_enrollment_form" model="ir.ui.view">
        <field name="name">academy.enrollment.form</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
           <form>
                <header>
                        <button name="action_confirm" string="Confirm" type="object" 
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_complete" string="Complete" type="object" 
                                class="btn-success" invisible="state != 'confirmed'"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                class="btn-secondary" invisible="state in ['cancelled', 'completed']"/>
                        <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="course_id"/>
                            <field name="enrollment_date"/>     
                        </group>
                        <group>
                            <field name="attendance_percentage"/>  
                            <field name="grade"/>  
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page> 
                    </notebook>
                </sheet>
                <chatter class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter>
           </form>
        </field>
    </record>
    
    <record id="view_academy_enrollment_search" model="ir.ui.view">
        <field name="name">academy.enrollment.search</field>
        <field name="model">academy.enrollment</field>
        <field name="arch" type="xml">
            <search>

                <field name="course_id" string="Course Name"/>
                <field name="student_id"/>
                <field name="enrollment_date"/>
                
                <filter string="Draft" name="state_draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="state_confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Cancelled" name="state_cancelled" domain="[('state','=','cancelled')]"/>
                <filter string="Completed" name="state_completed" domain="[('state','=','completed')]"/>
                <filter string="My Enrollments" name="my_enrollments" domain="[]"/>

                <filter string="State" name="group_state" context="{'group_by':'state'}"/>

            </search>
        </field>
    </record>


    <record id="action_academy_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">academy.enrollment</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>