<odoo>
    <record id="view_partner_form_academy" model="ir.ui.view">
        <field name="name">res.partner.form.academy</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/> 
        <field name="arch" type="xml">
            
            <!-- Add smart buttons -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" 
                        type="object" 
                        name="action_view_student_enrollments"
                        icon="fa-graduation-cap"
                        invisible="is_student == False">
                    <field string="Enrolled Courses" name="total_courses_enrolled" widget="statinfo"/>
                </button>
                
                <button class="oe_stat_button" 
                        type="object" 
                        name="action_view_instructor_courses"
                        icon="fa-book"
                        invisible="is_instructor == False">
                    <field string="Teaching Courses" name="total_courses_teaching" widget="statinfo"/>
                </button>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Academy">
                    <group>
                        <field name="is_student"/>
                        <field name="is_instructor"/>
                    </group>
                </page>
            </xpath>
            
        </field>
    </record>
</odoo>
