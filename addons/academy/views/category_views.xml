<odoo>
    <record id="view_academy_course_category_list" model="ir.ui.view">
        <field name="name">academy.course.category.list</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="course_count"/>
            </list>
        </field >
    </record>

    <record id="view_academy_course_category_form" model="ir.ui.view">
        <field name="name">academy.course.category.form</field>
        <field name="model">academy.course.category</field>
        <field name="arch" type="xml">
           <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="course_count"/>             
                        </group>
                    </group>
                    <notebook>
                        <page string="Courses">
                            <field name="course_ids" widget="many2many">
                                <list string="Courses" editable="bottom">  
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="instructor_id"/>
                                    <field name="state" widget="many2many"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
           </form>
        </field>
    </record>

    <record id="action_academy_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">academy.course.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>