<odoo>
    <record id="view_academy_course_history_list" model="ir.ui.view">
        <field name="name">academy.course.history.list</field>
        <field name="model">academy.course.history</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="user_id" />
                <field name="course_id" />
                <field name="old_state" />
                <field name="new_state" />
            </list>
        </field>
    </record>

    <record id="view_academy_course_history_form" model="ir.ui.view">
        <field name="name">academy.course.history.form</field>
        <field name="model">academy.course.history</field>
        <field name="arch" type="xml">
           <form create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="course_id"/>                      
                        </group>
                        <group>
                            <field name="old_state"/>
                            <field name="new_state"/>             
                        </group>
                    </group>
                </sheet>
           </form>
        </field>
    </record>

    <record id="action_academy_course_history" model="ir.actions.act_window">
        <field name="name">Course History</field>
        <field name="res_model">academy.course.history</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>    