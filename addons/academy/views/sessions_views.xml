<odoo>
    <record id="view_session_list" model="ir.ui.view">
        <field name="name">academy.session.list</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
            <list>
                <field name="no"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_session_form" model="ir.ui.view">
        <field name="name">academy.session.form</field>
        <field name="model">academy.session</field>
        <field name="arch" type="xml">
           <form>
                <sheet>
                    <group>
                        <group>
                            <field name="no"/>
                            <field name="code"/>   
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
                <chatter class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </chatter>
           </form>
        </field>
    </record>
    
    <record id="action_academy_session" model="ir.actions.act_window">
        <field name="name">sessions</field>
        <field name="res_model">academy.session</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>