<odoo>
    <record id="report_course_enrollment" model="ir.actions.report">
        <field name="name">Course Enrollment Report</field>
        <field name="model">academy.course</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">academy.report_course_enrollment_template</field>
        <field name="report_file">academy.report_course_enrollment_template</field>
        <field name="binding_model_id" ref="academy.model_academy_course"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_course_enrollment_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <!-- Report Header -->
                    <div class="row mb-5">
                        <div class="col-12 text-center">
                            <h2 class="text-center mb-4" >Course Enrollment Report</h2>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div style="border: 2px solid #e9ecef; border-radius: 8px; padding: 25px; background-color: #f8f9fa;">
                                

                                <table class="table table-borderless" style="margin-bottom: 0;">
                                    <tbody>
                                        <tr>
                                            <td style="width: 30%; padding: 12px 15px;">
                                                <strong style="color: #495057;">Course Name:</strong>
                                            </td>
                                            <td style="width: 70%; padding: 12px 15px; background-color: #ffffff; border-radius: 4px;">
                                                <span t-field="o.name" style="font-size: 15px;"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 12px 15px;">
                                
                                                <strong style="color: #495057;">Course Code:</strong>
                                            </td>
                                            <td style="padding: 12px 15px; background-color: #ffffff; border-radius: 4px;">
                                                <span t-field="o.code" style="font-size: 15px;"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 12px 15px;">
                                                <strong style="color: #495057;">Instructor:</strong>
                                            </td>
                                            <td style="padding: 12px 15px; background-color: #ffffff; border-radius: 4px;">
                                                <span t-field="o.instructor_id.name" style="font-size: 15px;"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 12px 15px;">
                                                <strong style="color: #495057;">Category:</strong>
                                            </td>
                                            <td style="padding: 12px 15px; background-color: #ffffff; border-radius: 4px;">
                                                <span t-field="o.category_id.name" style="font-size: 15px;"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 12px 15px;">                                               
                                                <strong style="color: #495057;">Duration (Hours):</strong>
                                            </td>
                                            <td style="padding: 12px 15px; background-color: #ffffff; border-radius: 4px;">
                                                <span t-field="o.duration_hours" style="font-size: 15px;"/>
                                                <span style="color: #6c757d; margin-left: 5px;">hours</span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                    <div style="height: 30px;">
                            <h4 style="color: #2c3e50; margin-bottom: 15px; font-weight: bold;">
                                     Enrolled Students
                            </h4>
                    </div>
                  
                    <!-- student, date, grade, attendance, passed -->
                    <table class="table table-bordered mb-4">
                        <thead>
                            <tr style="background-color: #8e9092ff;">
                                <th class="text-left" style="width: 30%;">Student Name</th>
                                <th class="text-left" style="width: 15%;">Grade</th>
                                <th class="text-left" style="width: 20%;">Enrollment Date</th>
                                <th class="text-left" style="width: 20%;">Attendance %</th>
                                <th class="text-left" style="width: 15%;">Passed</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.enrollment_ids" t-as="enrollment">
                                <tr>
                                    <td><t t-esc="enrollment.student_id.name"/></td>
                                    <td><t t-esc="enrollment.grade"/></td>
                                    <td><t t-esc="enrollment.enrollment_date"/></td>
                                    <td><t t-esc="enrollment.attendance_percentage"/></td>
                                    <td><t t-esc="enrollment.passed"/></td>
                                </tr>
                            </t>
                        </tbody>
                       <tfoot style="background-color: #f8f9fa;">
                                <tr>
                                    <td colspan="6" class="text-right">
                                        <strong>Total Enrolled Students: </strong>
                                        <span t-esc="len(o.enrollment_ids)"/>
                                    </td>
                                </tr>
                        </tfoot>
                    </table>  
                </t>
            </t>
        </t>
    </template>
</odoo>     