<odoo>
    <record id="report_enrollment_date" model="ir.actions.report">
        <field name="name">Enrollment Date</field>
        <field name="model">academy.course</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">academy.report_enrollment_date_template</field>
        <field name="report_file">academy.report_enrollment_date_template</field>
        <field name="binding_model_id" ref="academy.model_academy_course"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_enrollment_date_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    
              
                    <div class="row mb-4">
                        <div class="col-12 text-center">
                            <h2 style="font-weight: bold">Enrollment Report</h2>
                            <hr style="width: 30%; margin: 10px auto; border-top: 2px solid #000000;"/>
                        </div>
                    </div>
    
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-bordered table-hover">
                                <thead style="background-color: #cbccccff; color: white;">
                                    <tr>
                                        <th class="text-center" style="width: 10%;">#</th>
                                        <th style="width: 30%;">Student Name</th>
                                        <th style="width: 40%;">Course Name</th>
                                        <th class="text-center" style="width: 20%;">Enrollment Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="enrollments" t-as="enrollment">
                                        <tr>
                                            <td class="text-center"><t t-esc="enrollment_index + 1"/></td>
                                            <td><t t-esc="enrollment['student_id'][1]"/></td>
                                            <td><t t-esc="enrollment['course_id'][1]"/></td>
                                            <td class="text-center"><t t-esc="enrollment['enrollment_date']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot style="background-color:  #cbccccff;">
                                    <tr>
                                        <td colspan="4" class="text-right">
                                            <strong>Total Enrollments: <t t-esc="len(enrollments)"/></strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
    
</odoo>