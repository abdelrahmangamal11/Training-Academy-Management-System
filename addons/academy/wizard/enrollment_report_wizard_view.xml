<odoo>
    <record id="view_enrollment_report_wizard_form" model="ir.ui.view">
        <field name="name">enrollment.report.wizard.form</field>
        <field name="model">academy.enrollment.wizard.report</field>
        <field name="arch" type="xml">
            <form string="Enrollment Report">
                <group>
                    <field name="student_id"/>
                </group>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_enrollment_report_wizard" model="ir.actions.act_window">
        <field name="name">Enrollment Report Wizard</field>
        <field name="res_model">academy.enrollment.wizard.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>