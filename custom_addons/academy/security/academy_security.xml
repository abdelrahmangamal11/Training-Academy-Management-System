<odoo>
        <!-- Category -->
        <record id="module_category_academy" model="ir.module.category">
            <field name="name">Academy</field>
            <field name="sequence">1</field>
        </record>

        <!-- Student Group -->
        <record id="academy_group_student" model="res.groups">
            <field name="name">Academy Student</field>
            <field name="category_id" ref="module_category_academy"/>
        </record>
        
        <!-- Instructor Group -->
        <record id="academy_group_instructor" model="res.groups">
            <field name="name">Academy Instructor</field>
            <field name="category_id" ref="module_category_academy"/>
        </record>
        
        <!-- Manager Group -->
        <record id="academy_group_manager" model="res.groups">
            <field name="name">Academy Manager</field>
            <field name="category_id" ref="module_category_academy"/>
        </record>

        <record id="academy_courses_student_rule" model="ir.rule">
            <field name="name">Academy Student Rule </field>
            <field name="model_id" ref="model_academy_course"/>
            <field name="groups" eval="[Command.link(ref('academy.academy_group_student'))]"/>
            <field name="domain_force">[('state','=','published')] </field>
        </record>

        <record id="academy_enrollments_student_rule" model="ir.rule">
            <field name="name">Student create and read his own enrollment </field>
            <field name="model_id" ref="model_academy_enrollment"/>
            <field name="groups" eval="[Command.link(ref('academy.academy_group_student'))]"/>
            <field name="domain_force">[('student_id','=',user.id)] </field>
        </record>
</odoo>